package org.visnacom.model;

/**
 * @author F. Pfeiffer
 * 
 * This class implements the nodes of a graph.
 */
public class Node {

	// the id of the node
	private int id;

	/**
	 * Standard constructor.
	 *  
	 */
	public Node() {
		id = -1;
	}

	/**
	 * Constructor. Sets the node id.
	 * 
	 * @param ID
	 *            The initial id.
	 */
	public Node(int ID) {
		id = ID;
	}

	/**
	 * Gets the node id.
	 * 
	 * @return The node id.
	 */
	public int getId() {
		return id;
	}

	/**
	 * Sets the node id.
	 * 
	 * @param ID
	 *            The node id.
	 */
	public void setId(int ID) {
		id = ID;
	}

	/**
	 * @see java.lang.Object#toString()
	 */
	public String toString() {
		return "Node" + id;
	}
}