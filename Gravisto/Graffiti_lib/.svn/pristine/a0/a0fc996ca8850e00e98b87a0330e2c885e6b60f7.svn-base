package org.graffiti.plugins.algorithms.interval;

/**
 * This class is used as a container with access to the first and last element
 * it contains.
 * 
 * @author struckmeier
 */
public class IntervalSets<T> {
    private T first;

    private T last;

    private Boolean isInterval = true;

    private int numberOfNodes = 0;

    /**
     * Sets the first.
     * 
     * @param first
     *            the first to set.
     */
    public void setFirst(T first) {
        this.first = first;
    }

    /**
     * Returns the first.
     * 
     * @return the first.
     */
    public T getFirst() {
        return first;
    }

    /**
     * Sets the last.
     * 
     * @param last
     *            the last to set.
     */
    public void setLast(T last) {
        this.last = last;
    }

    /**
     * Returns the last.
     * 
     * @return the last.
     */
    public T getLast() {
        return last;
    }

    /**
     * Sets the isInterval.
     * 
     * @param isInterval
     *            the isInterval to set.
     */
    public void setIsInterval(Boolean isInterval) {
        this.isInterval = isInterval;
    }

    /**
     * Returns the isInterval.
     * 
     * @return the isInterval.
     */
    public Boolean getIsInterval() {
        return isInterval;
    }

    /**
     * Sets the numberOfNodes.
     * 
     * @param numberOfNodes
     *            the numberOfNodes to set.
     */
    public void setNumberOfNodes(int numberOfNodes) {
        this.numberOfNodes = numberOfNodes;
    }

    /**
     * Returns the numberOfNodes.
     * 
     * @return the numberOfNodes.
     */
    public int getNumberOfNodes() {
        return numberOfNodes;
    }
}

