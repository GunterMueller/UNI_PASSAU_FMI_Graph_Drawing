package org.graffiti.plugins.algorithms.phyloTrees.utility;

/**
 * A generic Pair. Encapsulates two objects of two generic types.
 */
public class Pair<A, B> {
    /** The first slot of this Pair. */
    private A first;

    /** The secons slot of this Pair. */
    private B second;

    /**
     * Creates a new Pair.
     * 
     * @param first
     *            The object that is to be saved in the first slot of this Pair.
     * @param second
     *            The object that is to be saved in the second slot this Pair.
     */
    public Pair(A first, B second) {
        this.first = first;
        this.second = second;
    }

    /**
     * Returns the object saved in the first slot of this Pair.
     * 
     * @return The object saved in the first slot of this Pair.
     */
    public A getFirst() {
        return first;
    }

    /**
     * Sets the object to be saved in the first slot.
     * 
     * @param first
     *            The object of generic type A to be saved in the first slot of
     *            this Pair.
     */
    public void setFirst(A first) {
        this.first = first;
    }

    /**
     * Returns the object saved in the second slot of this Pair.
     * 
     * @return The object saved in the second slot of this Pair.
     */
    public B getSecond() {
        return second;
    }

    /**
     * Sets the object to be saved in the second slot.
     * 
     * @param second
     *            The object of generic type B to be saved in the second slot of
     *            this Pair.
     */
    public void setSecond(B second) {
        this.second = second;
    }

    /**
     * Returns a String representation of this Pair.
     * 
     * The toString() method for both the objects saved in the first and the
     * second slot are concatenated and put in brackets.
     * 
     * @return String representation of this Pair.
     */
    @Override
    public String toString() {
        return "(" + getFirst() + ", " + getSecond() + ")";
    }
}
