package org.graffiti.plugins.scripting;

import org.graffiti.plugin.view.interactive.GestureFeedbackProvider;

/**
 * {@code ConsoleProvider} is implemented by the gesture feedback providers of
 * views providing a console.
 * 
 * @author Andreas Glei&szlig;ner
 * @version $Revision$ $Date$
 */
public interface ConsoleProvider extends GestureFeedbackProvider {
    /**
     * Prints the specified string of the specified kind on the console provided
     * by the view of this gesture feedback provider.
     * 
     * @param string
     *            the string to print on the console.
     * @param kind
     *            the kind of output.
     */
    public void print(String string, ConsoleOutput kind);
}

