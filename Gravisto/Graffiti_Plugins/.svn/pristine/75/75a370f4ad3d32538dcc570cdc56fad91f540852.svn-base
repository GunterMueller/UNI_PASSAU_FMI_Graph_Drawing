package org.graffiti.plugin.view.interactive;

/**
 * Classes implementing {@code Observer} can be attached to an
 * {@link Observable} in order to be notified of changes of the observed
 * property.
 * 
 * @author Andreas Glei&szlig;ner
 * @version $Revision$ $Date$
 * @see Observable#addObserver(Observer)
 */
public interface Observer<T> {
    /**
     * Is called whenever the observed property is changed.
     * 
     * @param newValue
     *            the new value of the observed property.
     */
    public void onChange(T newValue);
}

