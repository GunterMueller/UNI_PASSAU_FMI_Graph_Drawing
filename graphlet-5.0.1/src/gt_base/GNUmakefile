#
# Name of the module
#

MODULE = gt_base

#
# Start of the world
#

GRAPHLET_BASE_DIR=../..

#
# The target "it" is the first target in the makefile. It will be
# executed if you just type "make".
#

all it:	make_library


# Source code. lscanner.cpp and yparser.cpp are generated by
# $(LEX) and $(YACC), respectively.

MYCFILES= \
	Algorithm.cpp \
	Attribute_Base.cpp \
	Attribute_double.cpp \
	Attribute_int.cpp \
	Attribute_list.cpp \
	Attribute_string.cpp \
	Attributes.cpp \
	Common_Attributes.cpp \
	Common_Graphics.cpp \
	Circle.cpp \
	Device.cpp \
	Edge_Attributes.cpp \
	Error.cpp \
	GML.cpp \
	Graph.cpp \
	Graph_handlers.cpp \
	Graph_Attributes.cpp \
	Graphlet.cpp \
	GTL_Shuttle.cpp \
	Id.cpp \
	Key.cpp \
	Key_description.cpp \
	Keymapper.cpp \
	Keys.cpp \
	Line.cpp \
	List_of_Attributes.cpp \
	NEI.cpp \
	Node_Attributes.cpp \
	Parser.cpp \
	Polyline.cpp \
	Point.cpp \
	Rectangle.cpp \
	Segment.cpp \
	Shuttle.cpp \
	Tagged_Attributes.cpp \
	UIObject.cpp \
	gt_base.cpp \
	edge_NEI.cpp \
	gml_parser.cpp \
	node_NEI.cpp \
	Port.cpp \
	Ports.cpp


CFILES= $(MYCFILES)

#
# include common definitions
#

include $(GRAPHLET_BASE_DIR)/lib/graphlet/config/common


#
# Installation instruction
#

install.local::	install.library install.headers
	$(INSTALL_FILE) config.h $(INSTALL_INCLUDE_DIR)/$(MODULE)

#
# include dependencies
#

include ./GNUmakefile.depend

%.cpp: old/%.cpp
	convert $< $@
%.h: old/%.h
	convert $< $@


